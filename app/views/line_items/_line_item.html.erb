<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
<% if false %>
  <td><%= button_to 'delete product',line_item, method: :delete, data: {confirm: 'Are you sure to delete the product from cart?'} %></td>
 <% end %>
</tr>

